{
  "name": "lander",
  "version": "1.0.0",
  "description": "A web site for some mobile app",
  "main": "index.html",
  "scripts": {
    "watch:sass": "sass --watch sass/main.scss:style.css",
    "devserver": "browser-sync start --server --files 'style.css, *.html, *.js'",
    "start": "npm-run-all --parallel devserver watch:sass",
    "compile:sass": "sass sass/main.scss:style.comp.css",
    "prefix:css": "postcss --use autoprefixer -b 'last 10 versions' style.comp.css -o style.prefix.css",
    "compress:css": "sass style.prefix.css style.css --style=compressed",
    "build:css": "npm-run-all compile:sass prefix:css compress:css"
  },
  "author": "Arkady Kuznetsov",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^9.6.0",
    "concat": "^1.0.3",
    "sass": "^1.22.12",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^6.1.2"
  },
  "dependencies": {
    "fsevents": "^2.0.7"
  }
}
